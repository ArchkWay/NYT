<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/ic_search"
        />
    <DatePicker
        android:id="@+id/dpDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivSearch"
        android:visibility="gone"
        tools:targetApi="lollipop">
    </DatePicker>

    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_date"
        app:layout_constraintTop_toBottomOf="@id/ivSearch"
        app:layout_constraintLeft_toLeftOf="@id/ivSearch"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="42dp"
        android:textColor="#111"
        android:textSize="18sp"
        android:text="09.10.2018"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivSearch"
        app:layout_constraintLeft_toRightOf="@id/ivCalendar"
        />


    <Button
        android:id="@+id/btnDateChange"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:text="ОК"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/dpDatePicker"
        app:layout_constraintRight_toRightOf="@+id/dpDatePicker"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvReviews"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDate">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>